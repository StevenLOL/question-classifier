package com.blackparty.questionclassifier.DAO;

import java.util.List;

import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;

import com.blackparty.questionclassifier.models.User;

public class UserDaoImpl implements UserDAO{

	@Autowired
	private SessionFactory sf;
	
	@Override
	public void addUser(User u) {
		// TODO Auto-generated method stub
		this.sf.getCurrentSession().save(u);
		
	}

	
	@SuppressWarnings("unchecked")
	@Override
	public List<User> getUser(String username) {
		// TODO Auto-generated method stub
		return this.sf.getCurrentSession().createQuery("FROM USER_TABLE WHERE USERNAME = "+username).list();
	}

	@Override
	public void deleteUser(String username) {
		// TODO Auto-generated method stub
		User user = (User)sf.getCurrentSession().load(User.class,username);
		
		
	}
	
}
